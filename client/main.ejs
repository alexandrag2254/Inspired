	<body>

		<h1><em>Shared Quotes</em></h1>
		<!-- loop thorugh all quotes from the database -->
		
			<% for(var i in quotes) { %>
				<div class="quote">
					<h3> " <span> <%= quotes[i].quote %> </span> " </h3>
					<h5><em> ~ <%= quotes[i].name %> at <%= quotes[i].created_at %> </em></h5>

				<%= quotes[i].likes %>

				<form action="/like/<%= quotes[i]._id %>" method="get">
					<button>&#10003;</button>
				</form>

				<form action="/delete/<%= quotes[i]._id %>" method="get">
					<button>Delete</button>
				</form>

			</div>
			<% } %>
		
		<button class="btn btn-default"> <a href="/">Back</a> </button>

	</body>

